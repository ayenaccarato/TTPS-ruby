<div class="row">
  <div class="col-lg-12">
    <h1>Detalles de la sucursal</h1>    
    
    <div class="card">
      <table class="table">
        <tr>
          <td><b>Nombre: </b></td>
          <td><%= @sucursal.nombre %></td>
        </tr>
        <tr>
          <td><b>Direccion: </b></td>
          <td><%= @sucursal.direccion %></td>
        </tr>
        <tr>
          <td><b>Telefono: </b></td>
          <td><%= @sucursal.tel %></td>
        </tr>
        <tr>
          <td><b>Localidad: </b></td>
          <td><%= Locality.find(@sucursal.locality_id).name %></td>
        </tr>
      </table>
    </div>
    

    
    </div>
    
    <%= link_to "Editar sucursal", edit_sucursal_path(@sucursal), class: 'btn btn-warning' %>
    <%= button_to "Eliminar sucursal", @sucursal, method: :delete, class: 'btn btn-danger' %>
    <%= link_to "Volver al listado", sucursals_path, class: 'btn btn-outline-primary' %>
</div>

<h1>Agregar horario</h1>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <table class="table">
                <tr>
                <td><b>Nombre de la sucursal:</b></td>
                <td><%= @sucursal.nombre %></td>
                </tr>
            </table>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-lg-12">
        <div class="card p-5">
            <%= form_with model: @horario, url: crear_horario_sucursal_path(@sucursal) do |f| %>
                <div class="form-group">
                    <%= f.label :dia, "DÃ­a" %>
                    <%= f.select :dia, options_for_select(Horario.get_dias), {}, {class: 'form-control'} %>
                </div>

                <div class="form-group">
                    <%= f.label :desde, "Hora inicio" %>
                    <%= f.select :desde, options_for_select(Horario.get_desde), {}, {class: 'form-control'} %>

                </div>
            <% end %>
        </div>
    </div>
</div>

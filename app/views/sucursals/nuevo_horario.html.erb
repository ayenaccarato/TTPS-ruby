
<h1>Agregar horario</h1>
<div class="row">
    <div class="col">
        <div class="card">
            <table class="table-info">
                <tr>
                <td><b>Nombre de la sucursal:</b></td>
                <td><%= @sucursal.nombre %></td>
                </tr>
            </table>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-sm">
        <div class="card p-5">
            <%= form_with model: @horario, url: crear_horario_sucursal_path(@sucursal) do |f| %>
                
                <% if @horario.errors.any? %>
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <h3> <%= flash[:notice] %> </h3>
                        <ul>
                            <% @horario.errors.full_messages do |message| %>
                                <li><%= message %></li>
                            <% end %>
                        </ul>
                    </div>
                
                <% end %>
                
                <div class="form-group">
                    <%= f.label :dia, "DÃ­a" %>                   
                    <%= f.select :dia, options_for_select(Horario.dia.keys), {}, {class: 'form-control-sm'} %>
                    
                </div>            
                
                <div class="form-group">
                    <%= f.label :desde, "Hora inicio" %>
                    <%=f.time_field :desde %>
                </div>           

                <div class="form-group">
                    <%= f.label :hasta, "Hora fin" %>
                    <%=f.time_field :hasta %>
                </div>

                <div class="form-group">
                    <%= f.submit "Agregar", class: 'btn btn-primary' %>
                    <%= link_to "Cancelar", sucursals_path, class: 'btn btn-danger' %>
                </div>

            <% end %>
        </div>
    </div>
</div>
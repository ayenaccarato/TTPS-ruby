<div class="row">
  <div class="col-log-12">
    <div class="card p-5">
        <%= form_with(model: horario) do |f| %>
                    
            <% if @horario.errors.any? %>
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <h3> <%= flash[:notice] %> </h3>
                    <ul>
                        <% @horario.errors.full_messages do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
                    
            <% end %>
            
            <div class="form-group">
                <%= f.label :dia, "DÃ­a" %>                   
                <%= f.select :dia, options_for_select(Horario.dia.keys), {}, {class: 'form-control-sm'} %>
                
            </div>            
            
            <div class="form-group">
                <%= f.label :desde, "Hora inicio" %>
                <%=f.time_field :desde %>
            </div>           

            <div class="form-group">
                <%= f.label :hasta, "Hora fin" %>
                <%=f.time_field :hasta %>
            </div>

            <div class="form-group">
                <%= f.label :sucursal_id, "Sucursal" %>
                <%=f.select :sucursal_id, options_for_select(Sucursal.all.collect { |x| [x.nombre + " (" + Locality.find(x.locality_id).name + ")", x.id] }, @horario.sucursal_id), class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= f.submit "Agregar", class: 'btn btn-primary' %>
                <%= link_to "Cancelar", horarios_path, class: 'btn btn-danger' %>
            </div>

        <% end %>
        </div>
    </div>
</div>